{
	"manifest_version": 3,
	"version": "0.1",
	"name": "Promptly",
	"description": "The central place to save, copy, find, share, and manage your AI prompts.",

	"action": {
		"default_title": "Promptly",
		"default_popup": "index.html",
		"default_icon": "favicon.png"
	},

	"background": {
		"service_worker": "mainServiceWorker.js",
		"type": "module"
	},

	"permissions": ["activeTab", "tabs", "storage", "identity", "webRequest"],

	"host_permissions": ["<all_urls>"]
}
