{
	"name": "promptly-browser-extension",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"viteBuild": "vite build",
		"esbuildBundle": "pnpx esbuild src/lib/serviceWorkers/mainServiceWorker.ts --bundle --format=esm --minify --outdir=build/",
		"fullBuild": "pnpm viteBuild && pnpm esbuildBundle",
		"watchExtension": "nodemon --watch src --watch static --ext json,ts,js,css,html,svelte --exec \"pnpm fullBuild\"",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@types/chrome": "^0.0.250",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"nodemon": "^3.0.1",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"supabase": "^1.110.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"sveltekit-adapter-chrome-extension": "^2.0.0",
		"sveltekit-superforms": "^1.10.1",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vitest": "^0.32.2",
		"zod": "^3.22.4"
	},
	"type": "module",
	"dependencies": {
		"@supabase/supabase-js": "^2.38.4"
	}
}
